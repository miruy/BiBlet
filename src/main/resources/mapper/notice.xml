<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yurim.www.repository.NoticeDAO">

    <select id="selectAllNotice" resultType="NoticeDTO">
        select * from notice ORDER BY notice_no DESC LIMIT 0, 10
    </select>

    <select id="selectAllNoticeCount" resultType="Long">
        select COUNT(*) FROM notice
    </select>

    <select id="selectNoticeByPageNo" parameterType="Long" resultType="NoticeDTO">
        <if test='page==1'>
            select * from notice ORDER BY notice_no DESC LIMIT 0, 10
        </if>
        <if test='page==2'>
            select * from notice ORDER BY notice_no DESC LIMIT 11, 20
        </if>
    </select>

    <update id="updateReadCount" parameterType="Long">
        UPDATE notice SET COUNT = COUNT+1 WHERE notice_no = #{noticeNo}
    </update>

    <select id="selectNoticeDetail" parameterType="Long" resultType="NoticeDTO">
        select * from notice WHERE notice_no = #{noticeNo}
    </select>
</mapper>